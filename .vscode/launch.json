{
    "configurations": [
        {
            // Python Single File Debug
            "name": "Python: Remote Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "envFile": "${workspaceRoot}/.env",
            "stopOnEntry": true
        }
    ]
}
