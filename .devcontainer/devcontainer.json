{
    "name": "Container Name",
    "dockerComposeFile": "relative/path/to/docker-compose.yml",
    "service": "service to attach",
    "workspaceFolder": "/path/to/workdir",
    "runServices": [
        "services to run"
    ],
    "forwardPorts": [
        "ports to expose"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
            
        // PHP
        "search.exclude": {"**/html/": true,},
        "php.suggest.basic": false,
            
        // VUE || Javascript
        "files.associations": {
            "**/*.vue": "vue",
        },
        "eslint.probe": [
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact",
            "html",
            "vue",
            "markdown",
            "blade"
        ],
    },
    "extensions": [
        // PHP
        "bmewburn.vscode-intelephense-client",
        "recca0120.vscode-phpunit",
        
        // Laravel
        "codingyu.laravel-goto-view",
        "georgykurian.laravel-ide-helper",
        "onecentlin.laravel-blade",
        "onecentlin.laravel5-snippets",
        "stef-k.laravel-goto-controller",'

        // Python
        "ms-python.python",
        "ms-toolsai.jupyter",

        // Rust
        "rust-lang.rust",
        
        // Vue || Javascript
        "dbaeumer.vscode-eslint",
        "octref.vetur"
    ],
    // Install GIT to provide version control support   
    "postCreateCommand": "/bin/bash -c 'pkg_manager update && pkg_maneger install git --yes'"
}
