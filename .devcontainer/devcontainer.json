{
    "name": "Container Name",
    "dockerComposeFile": "relative/path/to/docker-compose.yml",
    "service": "service to attach",
    "workspaceFolder": "/path/to/workdir",
    "runServices": [
        "services to run"
    ],
    "forwardPorts": [
        "ports to expose"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "files.associations": {
            // PHP || VUE
            "**/*.vue": "vue",
        },
    },
    "extensions": [
        // PHP
        "felixfbecker.php-intellisense",
        "felixfbecker.php-debug",
        "onecentlin.laravel5-snippets",
        "onecentlin.laravel-blade",
        "octref.vetur",

        // Python
        "ms-python.python",
        "ms-toolsai.jupyter",

        // Rust
        "rust-lang.rust",
        
        // Vue 
        "octref.vetur"
    ],
    // Install GIT to provide version control support   
    "postCreateCommand": "/bin/bash -c 'pkg_manager update && pkg_maneger install git --yes'"
}
